@{
    var user = (Republic.Core.Security.Interfaces.IAppUser)ViewBag.CurrentUser;
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
